<Window x:Class="ProjetBureau.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetBureau"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="193*"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="169*"/>
        </Grid.ColumnDefinitions>
        <ProgressBar Minimum="0" Maximum="100" Value="0" Name="ProgressBarSave" Margin="24,31,41,347" RenderTransformOrigin="0.5,0.5" >
        </ProgressBar>
        <TextBlock Text="{Binding ElementName=ProgressBarSave, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="139,37,0,0" RenderTransformOrigin="0.598,1.608" />
        <Button Name ="Play" Content="Play" HorizontalAlignment="Left" Margin="96,230,0,0" VerticalAlignment="Top" Height="43" Width="122" Click="Play_Click"/>
        <Button Name ="Pause" Content="Pause" HorizontalAlignment="Left" Margin="339,230,0,0" VerticalAlignment="Top" Height="43" Width="122" Grid.ColumnSpan="2" Click="Pause_Click"/>
        <Button Name ="Stop" Content="Stop" HorizontalAlignment="Left" Margin="125,230,0,0" VerticalAlignment="Top" Height="43" Width="122" Grid.Column="2" Click="Stop_Click"/>
    </Grid>
</Window>
