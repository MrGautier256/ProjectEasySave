<Window x:Class="ProjetBureau.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetBureau"
        mc:Ignorable="d"
        Title="Window1" Height="391" Width="736">
    <Grid Margin="0,-15,0,15">
        <ProgressBar Minimum="0" Maximum="100" Value="0" Name="ProgressBarSave" Margin="41,58,41,258">
        </ProgressBar>
        <TextBlock Text="{Binding ElementName=ProgressBarSave, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,61,0,0" RenderTransformOrigin="0.598,1.608" Height="53" Width="98" FontSize="36" TextAlignment="Center" />
        <Button Name ="PlayPauseButton" Content="Pause" HorizontalAlignment="Left" Margin="419,198,0,0" VerticalAlignment="Top" Height="97" Width="237" Click="PlayPauseButton_Click"/>
        <Button Name ="Stop" Content="Stop" HorizontalAlignment="Left" Margin="90,198,0,0" VerticalAlignment="Top" Height="97" Width="237" Click="Stop_Click"/>
    </Grid>
</Window>
